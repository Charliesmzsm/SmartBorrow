<view><view class="top"><view class="index_top_search"><input class="index_top_search_word" type="text" placeholder="请输入设备名称" placeholder-class="placeholder"/><image class="index_top_search_pic" src="../../../static/search.jpg" mode="widthFix" data-event-opts="{{[['tap',[['search',['$event']]]]]}}" bindtap="__e"></image></view></view><view class="control_top_bar"><block wx:for="{{state}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['changePage',[index]]]]]}}" class="{{[(true)?'control_top_detail':'',(nowSelect===index)?'select':'']}}" bindtap="__e">{{item.name}}</view></block></view><view class="control_detail"><block wx:for="{{nowInfo}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block wx:if="{{item.type===nowSelect+1||item.type===4}}"><view class="control_info"><block wx:if="{{item.type===4}}"><image style="width:102%;" src="../../../static/add.jpg" mode="widthFix"></image></block><block wx:if="{{item.type!==4}}"><view class="control_info_out"><view class="control_info_ins"><view data-event-opts="{{[['tap',[['updateState',[index]]]]]}}" class="index_free_type" bindtap="__e"><view class="{{[(true)?'index_free_circle':'',(item.type===2)?'using':'',(item.type===1)?'free':'',(item.type===3)?'breaking':'']}}"></view><text>{{state[item.type-1].name+"中"}}</text></view><image class="control_info_img" src="{{item.img}}"></image><view class="control_info_title">{{item.name}}</view><view class="control_info_other"><view class="control_info_left">位<text style="padding-left:32rpx;"></text>置：</view>{{item.place}}</view><view class="control_info_other"><view class="control_info_left">编<text style="padding-left:32rpx;"></text>号：</view>{{item.id}}</view><view class="control_info_other small"><view class="control_info_left">借出时间：</view>{{item.time}}</view><view class="control_info_other"><view class="control_info_left">剩余时间：</view>{{item.lastTime}}</view></view></view></block></view></block></block></view></view>